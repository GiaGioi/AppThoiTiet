<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_bg"
    android:orientation="vertical"
    tools:context=".MainActivity">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:text="@string/detail"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20sp"
        android:background="#8686CE"
        android:layout_width="100dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#8686CE"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:src="@drawable/nhietdo"
                android:background="#8686CE"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:text="Feels like"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/tvfeel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="20°"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:id="@+id/tvnhietdo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20sp"
            android:background="#8686CE"
            android:layout_width="100dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="#8686CE"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/gio"
                    android:background="#8686CE"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:text="Wind"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:id="@+id/tvwind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="5km/h"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:id="@+id/tocdo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20sp"
            android:background="#8686CE"
            android:layout_width="100dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="#8686CE"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/nuoc"
                    android:background="#8686CE"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:text="Humidity"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:id="@+id/tvHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="15%"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:id="@+id/Humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20sp"
            android:background="#8686CE"
            android:layout_width="100dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="#8686CE"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/speed"
                    android:background="#8686CE"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:text="Pressure"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:id="@+id/tvPressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="25.24 in"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:id="@+id/Pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20sp"
            android:background="#8686CE"
            android:layout_width="100dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="#8686CE"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/eye"
                    android:background="#8686CE"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:text="Visilibity"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:id="@+id/tvVisilibity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="N/A"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:id="@+id/Visilibity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20sp"
            android:background="#8686CE"
            android:layout_width="100dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="#8686CE"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/nhietdo"
                    android:background="#8686CE"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:text="Dew point"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:id="@+id/tvDewpoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="11°"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:id="@+id/Dewpoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="200dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:text="NEXT 7 DAYS"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="20sp"
        android:id="@+id/rvDetail"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>